{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "../../apps/web/worker-configuration.d.ts"]
  },
  "include": ["**/*.ts", "../../apps/web/worker-configuration.d.ts"],
  "exclude": ["node_modules", "dist"]
}
